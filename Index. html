<body>

<div class="calc">
  <h2>AflahCalc</h2>
  <input id="screen" readonly>

  <div>
    <button onclick="add('7')">7</button>
    <button onclick="add('8')">8</button>
    <button onclick="add('9')">9</button>
    <button class="op" onclick="add('+')">+</button>

    <button onclick="add('4')">4</button>
    <button onclick="add('5')">5</button>
    <button onclick="add('6')">6</button>
    <button class="op" onclick="add('-')">-</button>

    <button onclick="add('1')">1</button>
    <button onclick="add('2')">2</button>
    <button onclick="add('3')">3</button>
    <button class="op" onclick="add('*')">ร</button>

    <button onclick="add('0')">0</button>
    <button onclick="add('.')">.</button>
    <button class="eq" onclick="calc()">=</button>
    <button class="op" onclick="add('/')">รท</button>

    <button class="clr" onclick="clr()">CLEAR</button>
  </div>
</div>

<script>
function add(v) {
  document.getElementById("screen").value += v;
}
function clr() {
  document.getElementById("screen").value = "";
}
function calc() {
  let s = document.getElementById("screen");
  try {
    s.value = eval(s.value);
  } catch {
    s.value = "Error";
  }
}
</script>

